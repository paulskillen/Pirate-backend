    "version": "0.2.0",
    "configurations": [
    
      {
        "type": "node",
        "request": "attach",
        "name": "Attach NestJS Debugger With Nodemon",
        "port": 9229,
        "restart": true,
        "stopOnEntry": false,
        "protocol": "inspector"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach Debug Nest Framework",
        "port": 9229,
        "restart": true,
        "stopOnEntry": false,
        "protocol": "inspector"
      },
  
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/employee-module/employee-company-news/employee-company-news.resolver.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }
  